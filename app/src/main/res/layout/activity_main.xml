<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/main_end"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:lottie_rawRes="@raw/main"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/main_corner"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_repeatMode="reverse"
            app:lottie_rawRes="@raw/main_corner"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/Hey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/front"
            android:textSize="40sp"
            android:fontFamily="@font/bebas_neue_regular"
            android:layout_below="@id/main_corner"
            android:layout_marginTop="50dp"
            android:layout_marginStart="60dp"
            />

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="25sp"
            android:fontFamily="@font/bebas_neue_regular"
            android:layout_below="@id/Hey"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/self_main"
            android:layout_centerInParent="true"
            android:layout_below="@id/welcome"
            android:layout_marginTop="10dp"
            android:id="@+id/avtar"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Dev"
            android:fontFamily="@font/bebas_neue_regular"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/sliderAnimation"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:lottie_rawRes="@raw/slider"
            android:rotation="270"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/avtar"
            android:layout_marginTop="30dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loadingAnimation"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:lottie_rawRes="@raw/loading"
            app:lottie_autoPlay="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/avtar"
            android:visibility="gone"
            app:lottie_loop="false"
            android:layout_marginTop="30dp"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/exit_anim"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/exit"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:rotation="180"/>

    </RelativeLayout>
</RelativeLayout>
