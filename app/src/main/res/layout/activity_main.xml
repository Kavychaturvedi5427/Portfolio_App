<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainCard"
        android:layout_width="390dp"
        android:layout_height="700dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Exit animation at top-right -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/exit_anim"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="20dp"
                app:lottie_rawRes="@raw/exit"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:rotation="180"/>

            <!-- Welcome text at top-left -->
            <TextView
                android:id="@+id/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="100dp"
                android:textStyle="bold"
                android:fontFamily="@font/bebas_neue_regular"
                android:text="@string/front"
                android:textSize="50sp"
                android:textColor="#545454"/>

            <!-- Subtitle text -->
            <TextView
                android:id="@+id/welcome_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="240dp"
                android:fontFamily="@font/bebas_neue_regular"
                android:text="Welcome to my Portfolio"
                android:textSize="25sp"
                android:textColor="#7C7474"/>

            <!-- Developer text at bottom-right -->

            <!-- Profile photo -->

            <TextView
                android:id="@+id/dev_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="262dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/bebas_neue_regular"
                android:text="@string/Dev"
                android:textSize="15sp"
                />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avtar"
                android:layout_width="174dp"
                android:layout_height="182dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="280dp"
                android:contentDescription="Profile photo"
                android:scaleType="centerCrop"
                android:src="@drawable/self_main"
                app:shapeAppearanceOverlay="@style/CircleImageView" />

            <!-- Slider animation -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/sliderAnimation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="150dp"
                android:rotation="-90"
                app:lottie_rawRes="@raw/slider"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <!-- Loading animation -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loadingAnimation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="150dp"
                app:lottie_rawRes="@raw/loading"
                app:lottie_loop="true"
                android:visibility="gone" />

            <!-- Top-left diagonal stripes -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="12dp">

                <View
                    android:layout_width="100dp"
                    android:layout_height="6dp"
                    android:background="#90EE90"
                    android:rotation="-45"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="6dp"
                    android:background="#90EE90"
                    android:rotation="-45"
                    android:layout_marginTop="18dp"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="36dp"
                    android:background="#90EE90"
                    android:rotation="-45" />
            </RelativeLayout>

            <!-- Bottom-right diagonal stripes -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:padding="12dp">

                <View
                    android:layout_width="100dp"
                    android:layout_height="6dp"
                    android:background="#90EE90"
                    android:rotation="145"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="6dp"
                    android:background="#90EE90"
                    android:rotation="145"
                    android:layout_marginTop="18dp"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="6dp"
                    android:background="#90EE90"
                    android:rotation="145"
                    android:layout_marginTop="36dp"/>
            </RelativeLayout>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
