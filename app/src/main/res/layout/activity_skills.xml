<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    android:id="@+id/main"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!--        Hard Coded Value needed to be changed as they make the layout appear
        differently on different device screen size-->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tech_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="9dp"
            android:layout_margin="35dp"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tech_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Technical Skills"
                    android:fontFamily="@font/bebas_neue_regular"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    android:shadowColor="@color/grey"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    />

                <GridLayout
                    android:id="@+id/tech_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:layout_below="@id/tech_txt"
                    android:layout_margin="10dp"
                    >

                    <ImageView
                        android:id="@+id/java"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/java"
                        android:layout_margin="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:text="Java"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_height="50dp"
                        android:layout_width="50dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_margin="10dp"
                        android:src="@drawable/c"
                        />
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="C"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/android"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_margin="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\t\tAndroid\nDevelopment"
                        android:layout_row="1"
                        android:layout_column="2"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/mysql"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:layout_margin="10dp"
                        />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="MySQL"
                        android:layout_column="3"
                        android:layout_row="1"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/html5"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_margin="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HTML-5"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/css"
                        android:layout_row="2"
                        android:layout_column="2"
                        android:layout_margin="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CSS-3"
                        android:layout_row="3"
                        android:layout_column="2"
                        android:layout_gravity="center"
                        />


                </GridLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/soft_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="9dp"
            android:layout_margin="30dp"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_below="@id/tech_card"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                >

                <TextView
                    android:id="@+id/soft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soft Skills"
                    android:fontFamily="@font/bebas_neue_regular"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    android:shadowColor="@color/grey"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    />
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:columnCount="3"
                    android:layout_below="@id/soft"
                    >

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_column="0"
                        android:layout_row="0"
                        app:lottie_rawRes="@raw/problemsolving"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_margin="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Problem \nSolving"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        />
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_column="1"
                        android:layout_row="0"
                        app:lottie_rawRes="@raw/critical"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_margin="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        android:text="Critical\nThinking" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_column="2"
                        android:layout_row="0"
                        app:lottie_rawRes="@raw/team"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_margin="15dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_gravity="center"
                        android:text="Team\n Work" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:lottie_rawRes="@raw/timemanage"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_margin="15dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\t\t\tTime\nManagement"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        />
                </GridLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@id/Toolstech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="9dp"
            android:layout_margin="30dp"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_below="@id/soft_card">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <TextView
                    android:id="@+id/Toolstech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tools &amp; Technologies"
                    android:fontFamily="@font/bebas_neue_regular"
                    android:textSize="30sp"
                    android:layout_centerHorizontal="true"
                    android:shadowColor="@color/grey"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="4"
                    />

                <GridLayout
                    android:id="@+id/Toolsgrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:layout_below="@id/Toolstech"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/git"
                        android:layout_margin="20dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Git"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/github"
                        android:layout_margin="20dp"
                        android:layout_row="0"
                        android:layout_column="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GitHub"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/vs"
                        android:layout_margin="20dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visual Studio"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/firebase"
                        android:layout_margin="20dp"
                        android:layout_row="2"
                        android:layout_column="1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Firebase\n\tStudio"
                        android:layout_row="3"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/android_studio"
                        android:layout_margin="20dp"
                        android:layout_row="2"
                        android:layout_column="0"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android\n\tStudio"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_gravity="center"
                        />
                </GridLayout>

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/slider"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:lottie_rawRes="@raw/slider"
            android:rotation="90"
            android:layout_below="@id/Toolstech"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/loading"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Toolstech"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            />

    </RelativeLayout>
</ScrollView>
