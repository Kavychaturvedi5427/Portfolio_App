<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AboutSection_activity">

    <!-- Contact Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/darker_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Phone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circular_bg"
                    android:contentDescription="@string/phone"
                    android:padding="10dp"
                    android:src="@drawable/telephone"
                    app:tint="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebas_neue_regular"
                        android:text="@string/phone"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebas_neue_regular"
                        android:text="@string/number"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.2"
                android:background="@android:color/darker_gray" />

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circular_bg"
                    android:contentDescription="@string/email"
                    android:padding="10dp"
                    android:src="@drawable/email"
                    app:tint="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebas_neue_regular"
                        android:text="@string/email"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebas_neue_regular"
                        android:text="@string/mails"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.2"
                android:background="@android:color/darker_gray" />

            <!-- Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circular_bg"
                    android:contentDescription="@string/address_desc"
                    android:padding="10dp"
                    android:src="@drawable/location"
                    app:tint="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebas_neue_regular"
                        android:text="@string/address_text"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bebas_neue_regular"
                        android:text="@string/v_21_yashoda_nagar_near_namak_factory_chauraha_kanpur_nagar_uttar_pradesh"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.2"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/bebas_neue_regular"
                android:gravity="center"
                android:text="@string/see_more_on"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp" />

            <!-- Social Media Icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">


                <ImageView
                    android:id="@+id/instagram"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/circular_bg"
                    android:contentDescription="@string/instagram"
                    android:padding="8dp"
                    android:src="@drawable/instagram" />

                <ImageView
                    android:id="@+id/linked"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/circular_bg"
                    android:contentDescription="@string/linkedin"
                    android:padding="8dp"
                    android:src="@drawable/linkedin" />

                <ImageView
                    android:id="@+id/git"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/circular_bg"
                    android:contentDescription="@string/github"
                    android:padding="8dp"
                    android:src="@drawable/github" />

                <ImageView
                    android:id="@+id/x"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/circular_bg"
                    android:contentDescription="@string/twitter"
                    android:padding="8dp"
                    android:src="@drawable/twitter" />
            </LinearLayout>


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:rotation="90"
                app:lottie_autoPlay="true"
                app:lottie_colorFilter="@color/grey"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/slider" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
